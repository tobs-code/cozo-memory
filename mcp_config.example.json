{
  "mcpServers": {
    "cozo-memory": {
      "command": "node",
      "args": [
        "/path/to/cozo-memory/dist/index.js"
      ]
    }
  },
  "httpClients": {
    "cozo-memory-http": {
      "baseUrl": "http://localhost:3001",
      "endpoints": {
        "health": "/api/health",
        "search": "/api/query",
        "mutate": "/api/mutate",
        "ingest": "/api/ingest",
        "snapshots": "/api/snapshots"
      }
    }
  }
}
